<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_2"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/txtRowIot"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Iot"
		        android:textSize="@dimen/row_heading_size" />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:orientation="horizontal" >
		    <TextView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="ServerIP"
		        android:id="@+id/txtRowServerIp"
		        android:textSize="@dimen/row_heading_size" />
            
		    <TextView
		        android:id="@+id/txtRowServerPort"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="ServerPort"
		        android:layout_weight="1"
		        android:textSize="@dimen/row_sub_heading_size" />
	</LinearLayout>		    


</LinearLayout>